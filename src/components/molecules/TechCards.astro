---
export interface Props {
  title: string
  img: ImageMetadata
  number: number
  children?: any // También puedes usar `AstroComponent` para un tipo más específico
}
import { Image } from 'astro:assets'
import './TechCards.scss'

const { title, img, number } = Astro.props
---

<div class='tech-card card bg-body bg-opacity-50 rounded-4 shadow-sm glass'>
  <Image
    width={100}
    height={100}
    src={img}
    class='tech-card__img mx-auto mt-3 p-0 pb-2 card-img-top'
    alt={title}
  />
  <div class='card-body p-3 d-flex flex-column'>
    <h5 class='tech-card__h5 h5 card-title text-center'>{title}</h5>
    <p class='tech-card__p card-text m-0'>Sé sobre:</p>
    <slot />
  </div>
</div>
