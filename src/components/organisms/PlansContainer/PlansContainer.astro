import PlansSwiper from './PlansSwiper'

const plans = [
    {
        name: 'Classic',
        price: 'MX$ 2299.99',
        originalPrice: 'MX$ 3299.99',
        discount: '30%',
        description: 'Pequeño plan para que el cliente pueda conocer tu negocio.',
    },
    {
        name: 'Premium',
        price: 'MX$ 7399.99',
        originalPrice: 'MX$ 9799.99',
        discount: '25%',
        description: 'Un plan para negocios en crecimiento.',
    },
    {
        name: 'Personalizado',
        price: 'MX$ ...',
        originalPrice: 'MX$ ...',
