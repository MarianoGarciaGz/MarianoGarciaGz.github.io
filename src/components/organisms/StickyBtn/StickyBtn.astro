---
import DropdownTheme from '@src/components/organisms/DropdownTheme/DropdownTheme.astro'
---

<div
  class='dropdown position-fixed bottom-0 end-0 mb-4 me-4 bd-mode-toggle z-3 bg-body rounded-4 shadow-sm d-flex d-md-none'>
  <button
    class='btn btn-bd-primary py-2 dropdown-toggle rounded-4 d-flex align-items-center border-0'
    id='bd-theme'
    type='button'
    aria-expanded='false'
    data-bs-toggle='dropdown'
    aria-label='Toggle theme (dark)'>
    <i class='bi bi-moon-stars-fill'></i>
    <svg
      class='bi theme-icon-active'
      width='1em'
      height='1em'>
      <use href='#moon-stars-fill'></use>
    </svg>
    <span
      class='visually-hidden'
      id='bd-theme-text'
      >Toggle theme</span
    >
  </button>
  <DropdownTheme />
</div>
